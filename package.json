{
  "name": "codetxt",
  "version": "1.0.1",
  "description": "CLI tool to analyze and create text dumps of codebases for LLMs. A Node.js/TypeScript implementation inspired by gitingest.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "codetxt": "dist/index.js"
  },
  "scripts": {
    "start": "tsx src/index.ts",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "format": "prettier --write .",
    "check": "tsc --noEmit"
  },
  "keywords": [
    "codetxt",
    "cli",
    "llm",
    "git",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "figlet": "^1.8.2",
    "ignore": "^7.0.5",
    "inquirer": "^12.8.0",
    "ora": "^8.2.0",
    "simple-git": "^3.25.0",
    "tiktoken": "^1.0.14"
  },
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^20.14.2",
    "esbuild": "^0.25.8",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.4.5"
  }
}
